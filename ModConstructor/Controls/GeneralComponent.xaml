<UserControl x:Class="ModConstructor.Controls.GeneralComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModConstructor"
             xmlns:Controls="clr-namespace:ModConstructor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Expander Header="Общие параметры" Margin="0,0,0,7">
            <StackPanel Margin="2,0">
                <Controls:PropertyField Target="{Binding className}" Header="Имя класса" Value="{Binding value}" Datatype="String" Error="{Binding error}"/>
                <Controls:PropertyField Target="{Binding parent}" Header="Родитель" Value="{Binding value.item}" Datatype="Enumerable"/>
                <Controls:PropertyField Target="{Binding isAbstract}" Header="Абстрактный класс" Value="{Binding value}" Datatype="Boolean"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>

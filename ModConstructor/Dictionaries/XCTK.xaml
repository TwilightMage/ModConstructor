<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ModConstructor.Dictionaries"
                    xmlns:Advanced="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit">
    <Style TargetType="{x:Type Advanced:ByteUpDown}">
        <Setter Property="Background" Value="{DynamicResource ControlInput}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    </Style>

    <Style TargetType="{x:Type Advanced:IntegerUpDown}">
        <Setter Property="Background" Value="{DynamicResource ControlInput}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    </Style>

    <Style TargetType="{x:Type Advanced:DoubleUpDown}">
        <Setter Property="Background" Value="{DynamicResource ControlInput}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text}"/>
    </Style>
</ResourceDictionary>